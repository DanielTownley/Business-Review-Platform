<p id="notice"><%= notice %></p>

<p>
  <strong>Email:</strong>
  <%= @user.email %>
</p>

<p>
  <strong>Password hash:</strong>
  <%= @user.password_hash %>
</p>

<p>
  <strong>Password salt:</strong>
  <%= @user.password_salt %>
</p>
<% @reviews.each do |rev| %>
  <%= link_to "#{rev.business.name}", business_path(rev.business) %>:
  <%= rev.create_date%>
  <% for star in 1..rev.stars.to_i %>
    <img src="/images/Star.svg.png">
  <% end %>
  <%unless rev.description.blank? %>
    <br />
    <%= rev.description %>
  <% end %>
  <br />
<% end %>

<%= link_to 'Edit', edit_user_path(@user) %> |
<%= link_to 'Back', users_path %>
